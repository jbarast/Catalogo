<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">


<!-- Nombre para llamar al archivo. -->
  <persistence-unit name="Persistencia">
  
  <!-- Las clases -->
  <class>com.ipartek.jonBarnes.tipos.Usuario</class>
  <class>com.ipartek.jonBarnes.tipos.Producto</class>
    <class>com.ipartek.jonBarnes.tipos.ProductoStockImagen</class>
  
  
  <!-- Propiedades. -->
    <properties>
    
    	<!-- Propiedades de la base de datos. -->
        <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
        <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/ipartek?useUnicode=true&amp;useJDBCCompliantTimezoneShift=true&amp;useLegacyDateTimeCode=false&amp;serverTimeZone=UTC" />
        <property name="javax.persistence.jdbc.user" value="root" />
        <property name="javax.persistence.jdbc.password" value="" />
        
        <!-- Propiedades de hibernate. -->
        <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
        <property name="hibernate.hbm2ddl.auto" value="create" /> 
        <!-- Muestra los comandos SQL, una vez terminado ponerlo en false. -->
        <property name="hibernate.show_sql" value="true"/>
    </properties>
  </persistence-unit>

</persistence>