  </servlet>
  
  <servlet>
    <servlet-name>usuariocrud</servlet-name>
    <servlet-class>
      com.ipartek.jonBarnes.controladores.UsuarioCRUDServlet
    </servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>usuarioform</servlet-name>
    <servlet-class>
      com.ipartek.jonBarnes.controladores.UsuarioFormServlet
    </servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>
      com.ipartek.jonBarnes.controladores.LoginServlet
    </servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>alta</servlet-name>
    <servlet-class>
      com.ipartek.jonBarnes.controladores.AltaServlet
    </servlet-class>
  </servlet>
  
  
  <servlet>
    <servlet-name>listaproductosform</servlet-name>
    <servlet-class>
      com.ipartek.jonBarnes.controladores.ListaProductosFormServlet
