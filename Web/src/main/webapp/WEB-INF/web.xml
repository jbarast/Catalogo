  </servlet>
  
   <servlet>
    <servlet-name>carritocrud</servlet-name>
    <servlet-class>
      com.ipartek.jonBarnes.controladores.CarritoCRUDServlet
    </servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>carritoform</servlet-name>
    <servlet-class>
      com.ipartek.jonBarnes.controladores.CarritoFormServlet
    </servlet-class>
  </servlet>
  <servlet>
  	<description>
  	</description>
  	<display-name>listafacturas</display-name>
  	<servlet-name>listafacturas</servlet-name>
  	<servlet-class>com.ipartek.jonBarnes.controladores.ListaFacturas</servlet-class>
  </servlet>
  
  <!-- Mapeo de las servlets. -->
  <servlet-mapping>
    <servlet-name>productocrud</servlet-name>
    <url-pattern>/productocrud</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>listaproductos</servlet-name>
    <url-pattern>/listaproductos</url-pattern>
  </servlet-mapping>
  
  
  <servlet-mapping>
    <servlet-name>productoform</servlet-name>
    <url-pattern>/productoform</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>usuariocrud</servlet-name>
